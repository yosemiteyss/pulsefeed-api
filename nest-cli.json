{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../pulsefeed-common/src/db/client/**/*",
        "outDir": "dist/pulsefeed-common"
      }
    ],
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [
            ".request.ts",
            ".response.ts",
            ".dto.ts"
          ],
          "introspectComments": true
        }
      }
    ]
  }
}
